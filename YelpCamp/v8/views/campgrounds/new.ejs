<%- include("../partials/header") %>

<div class="container">
    
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
        <div style="margin:0 auto;">
            <h1>Create a new CampGround</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name='name' id="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name='price' id="price" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name='image' placeholder="Image URLs" id="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name='description' placeholder="Description" id="image">
                </div>
                <button style="width: 100%;" type="submit" class="btn btn-outline-dark">SUBMIT</button>
            </form>
        </div>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
<a href="/campgrounds">Go Back</a>
<%- include("../partials/footer") %>