<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
        <div style="margin:0 auto;">
            <p><h1>Edit <em><%= campground.name %></em>  </h1></p>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name='campground[name]' id="name" placeholder="Campground Name" value="<%= campground.name %> ">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name='campground[price]' id="price" placeholder="Price" min="100" step="100" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name='campground[image]' placeholder="Image URLs" id="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name='campground[description]' placeholder="Description" id="image" value="<%= campground.description %>">
                </div>
                <button style="width: 100%;" type="submit" class="btn btn-outline-dark">SUBMIT</button>
            </form>
            <p class="mt-2"><a href="/campgrounds">Go Back</a></p>
        </div>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
<%- include("../partials/footer") %>